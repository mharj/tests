{
	"compilerOptions": {
		"module": "NodeNext",
		"lib": ["es2015"],
		"target": "es2015",
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "NodeNext",
		"sourceRoot": "./src",
		"types": ["node"],
		"sourceMap": true,
		"strict": true,
		"declaration": true,
		"removeComments": false,
		"inlineSources": true,
		"inlineSourceMap": false,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true
	},
	"include": ["src/"],
	"exclude": ["test/", "dist/", "node_modules/", "*.test.ts", "*.test-d.ts"]
}
